@*@model DBE.Models.DBECompany[]*@
@model IEnumerable<DBESearch.Models.DBECompany>
@using DBESearch.Models;
<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading"><b>Currently Certified Companies on Record Matching Search Criteria</b>              
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Vendor</th>
                    <th>Location</th>
                    <th>Phone</th>
                    <th>Certifications</th>
                </tr>
            </thead>
            @foreach (var company in Model)
            {
                <tr>
                    <td id="companyid" style="display:none;">@company.CompanyId</td>
                    <td id="url">
                        @Html.ActionLink(@company.CompanyName, "companydetails", new { id = company.CompanyId }, new { target = "_blank" })
                        @if (!(string.IsNullOrEmpty(company.DBAName)))
                        {<br /><p font size="1">DBA: @company.DBAName </p>}
                    </td>
                    <td>@company.City, @company.State @company.Zip</td>
                    <td x-ms-format-detection="none">@company.Phone</td>
                    <td>
                        @if (company.DBE == true)
                        {<p style="display:inline">DBE </p>}@if (company.ACDBE == true)
                        {<p style="display:inline">ACDBE </p>}@if (company.MBE == true)
                        {<p style="display:inline">MBE </p>}@if (company.SBP == true)
                        {<p style="display:inline">SBP </p>}
                    </td>
                    <td id="@company.CompanyId"></td>
                </tr>
            }
        </table>
    </div>
</div>